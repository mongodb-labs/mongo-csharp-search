<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Authors>MongoDB Inc.</Authors>
    <Description>MongoDB driver extension providing support for Atlas Search. This package is NOT a supported MongoDB product. See https://github.com/mongodb-labs/mongo-csharp-search for more details.</Description>
    <Copyright>Copyright Â© 2021-present MongoDB Inc.</Copyright>
    <PackageProjectUrl>https://docs.atlas.mongodb.com/atlas-search/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>mongodb;mongo;nosql;atlas;search</PackageTags>
    <Version>1.0.0-beta1</Version>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageIcon>PackageIcon.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/mongodb-labs/mongo-csharp-search</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.14.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\PackageIcon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
